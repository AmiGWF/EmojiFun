<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/item_height_48"
              android:background="#668"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/sheet_header_icon"
            android:layout_width="@dimen/item_icon_24"
            android:layout_height="@dimen/item_icon_24"
            android:layout_marginLeft="@dimen/item_margin_8"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/sheet_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_margin_8"
            android:text="@string/app_name"
            android:textSize="@dimen/item_font_16"/>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorSheetDivider"/>

</LinearLayout>